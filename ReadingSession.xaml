<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperTrails_ThomasAdams_c3429938.Pages.ReadingSession"
             Title="">
    
    <ScrollView>
        <VerticalStackLayout>
            <Image
            Source="book_placeholder.png"
            HorizontalOptions="Center"
            HeightRequest="200"
            WidthRequest="300"/>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Label
            Text="{Binding CurrentBook.title}"
            SemanticProperties.HeadingLevel="Level2"
            FontSize="18"
            HorizontalOptions="Center"
            Margin="0, 5, 0, 0"/>

            <Label
            Text="{Binding CurrentBook.description}"
            SemanticProperties.HeadingLevel="Level3"
            FontSize="14"
            Margin="10, 5, 0, 10"/>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Grid ColumnDefinitions="*, *" Margin="0, 0">
                <Label
                Grid.Column="0"
                Text="{Binding CurrentBook.categories, StringFormat='Genre: {0}'}"
                FontSize="16"
                HorizontalOptions="Start"
                Margin="10"/>

                <Label
                Grid.Column="1"
                Text="{Binding CurrentBook.pageCount, StringFormat='Page Count: {0}'}"
                FontSize="16"
                HorizontalOptions="End"
                Margin="10"/>
            </Grid>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Label
                Text="Enter Last Page Read:"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="10"/>
            <Border
                Stroke="Gray"
                StrokeThickness="1"
                StrokeShape="Rectangle"
                Padding="5"
                Margin="10, 20, 10, 10"
                HorizontalOptions="Center"
                WidthRequest="300">

                <Entry
                    Placeholder="Current Page: ###"
                    Keyboard="Numeric"
                    VerticalTextAlignment="Center"
                    Text="{Binding PagesRead, Mode=TwoWay}">
                </Entry>
            </Border>

            <Button
                Text="Finish Reading Session"
                Margin="0, 20"
                WidthRequest="200"
                HorizontalOptions="Center"
                Command="{Binding FinishSessionCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>