<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperTrails_ThomasAdams_c3429938.Pages.SavedBookDetails"
             Title="">
    
    <ScrollView>
        <VerticalStackLayout>
            <Image
                Source="book_placeholder.png"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="300"/>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Label
                Text="{Binding title}"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0, 5, 0, 0"/>

            <Label
                Text="{Binding description}"
                SemanticProperties.HeadingLevel="Level3"
                FontSize="14"
                Margin="10, 5, 0, 10"/>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Grid ColumnDefinitions="*, *" Margin="0, 0">
                <Label
                    Grid.Column="0"
                    Text="{Binding categories, StringFormat='Genre: {0}'}"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Margin="10"/>

                <Label
                    Grid.Column="1"
                    Text="{Binding pageCount, StringFormat='Page Count: {0}'}"
                    FontSize="16"
                    HorizontalOptions="End"
                    Margin="10"/>
            </Grid>

            <BoxView HeightRequest="1" HorizontalOptions="Fill" />

            <Button
            Text="Read"
            Margin="0, 20"
            WidthRequest="200"
            HorizontalOptions="Center"
            Clicked="StartReadingSession"/>

            <Button
                Text="Delete Book"
                Margin="0, 20"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="DeleteButton_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>